- if user_signed_in?
  - if product.favorite_user(current_user.id)
    - button_to product_like_path(favorite, product_id: product.id), method: delete, id: "like-button", remote: true do
      = image_tag("favorite-red-heart.svg")
      %span
        = product.favorite_count
  - else
    - button_to product_favorite_path(product), id: "favorite-button", remote: true do
      = image_tag("favorite-heart.svg")
      %span
        = product.favorite_count
- else
  =image_tag("favorite-heart.svg")
  %span
    = product.favorite_count
